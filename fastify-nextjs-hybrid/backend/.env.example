DATABASE_URL="postgresql://hybriduser:hybridpass@localhost:5433/hybriddb?schema=public"

# Service-to-Service Authentication (PRODUCTION ONLY)
# Shared secret for JWT token generation/validation between Next.js and Fastify
# REQUIRED when enabling authentication middleware (see src/index.ts and src/middleware/auth.ts)
#
# Generate a secure secret with:
# node -e "console.log(require('crypto').randomBytes(32).toString('hex'))"
#
# IMPORTANT: Use the SAME secret in both backend and frontend .env files
# SERVICE_SECRET="your-secure-random-secret-here-min-32-characters"

# User Authentication Secret (OPTIONAL)
# If Fastify validates end-user JWT tokens directly (not just service tokens)
# JWT_SECRET="your-jwt-secret-for-user-tokens"
